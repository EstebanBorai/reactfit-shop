{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "lib": [ "es2015", "dom" ],
    "paths": {
      "actions/*": [
        "client/actions/*"
      ],
      "api/*": [
        "client/api/*"
      ],
      "assets/*": [
        "client/assets/*",
      ],
      "components/*": [
        "client/components/*",
      ],
      "helpers/*": [
        "client/helpers/*",
      ],
      "pages/*": [
        "client/pages/*",
      ],
      "reducers/*": [
        "client/reducers/*",
      ]
    }
  },
  "include": [
    "./client/**/*"
  ]
}
