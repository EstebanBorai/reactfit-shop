{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "lib": [ "es2015", "dom" ],
    "paths": {
      "actions/*": [
        "client/actions/*"
      ],
      "api/*": [
        "client/api/*"
      ],
      "components/*": [
        "client/components/*",
      ],
      "containers/*": [
        "client/containers/*"
      ],
      "reducers/*": [
        "client/reducers/*",
      ],
      "theme/*": [
        "client/theme/*",
      ],
      "types/*": [
        "client/types/*"
      ]
    }
  },
  "include": [
    "./client/**/*"
  ]
}
