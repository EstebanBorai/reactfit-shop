{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "lib": [ "es2015", "dom" ],
    "paths": {
      "assets/*": [
        "client/assets/*",
      ],
      "components/*": [
        "client/components/*",
      ],
      "misc/*": [
        "client/misc/*"
      ],
      "types/*": [
        "client/types/*",
      ]
    }
  },
  "include": [
    "./client/**/*",
    "./server/**/*"
  ]
}
