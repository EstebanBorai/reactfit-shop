{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": ".",
    "lib": [ "es2015", "dom" ],
    "paths": {
      "actions/*": [
        "client/actions/*"
      ],
      "assets/*": [
        "client/assets/*"
      ],
      "components/*": [
        "client/components/*"
      ],
      "containers/*": [
        "client/containers/*"
      ],
      "helpers/*": [
        "client/helpers/*"
      ],
      "hooks/*": [
        "client/hooks/*"
      ],
      "misc/*": [
        "client/misc/*"
      ],
      "pages/*": [
        "client/pages/*"
      ],
      "reducers/*": [
        "client/reducers/*"
      ],
      "selectors/*": [
        "client/selectors/*"
      ],
      "types/*": [
        "client/types/*"
      ]
    }
  },
  "include": [
    "./client/**/*",
    "./server/**/*"
  ]
}
