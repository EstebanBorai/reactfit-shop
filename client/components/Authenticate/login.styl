.lobby-login
  display: grid
  grid-template-columns: minmax(35% 50%) auto
  width: 100%
  height: 100vh

  .login-ad-container
    grid-column: 1 / 1
    background: #226E84
    color: #ffffff
    display: flex
    justify-content: center
    align-items: center

  .login-form
    grid-column: 2 / 2
    background: #F1F1F1
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    position relative

    .login-footer
      grid-column: 2 / 2
      position: absolute
      bottom: 0
      width: 90%
      font-size: .65rem
      color: #989898
      margin: 0 auto .5rem auto
      text-align: center
      padding: .25rem 0
      box-sizing: border-box
