@import '~theme/index.styl'

.conversation
  display: grid
  grid-template-rows: 60px auto 60px
  background: #ffffff

  .controls
    width: 100%
    padding: .8rem
    box-sizing: border-box
    display: inline-block
    grid-row: 3 / 3

    form
      height: 40px
      width: 100%
      display: flex
      border-radius: .25rem

      input
        color: #111111
        padding: .4rem 1rem
        box-sizing: border-box
        width: 100%
        border-radius: .25rem 0 0 .25rem
      
      button
        border-left: none !important
        border-radius: 0 .25rem .25rem 0
        background: primary

      input, button
        font-family: inherit
        font-size: .9rem
        display: inline-block
        border: 2px solid alpha(primary, 0.5)
        height: 100%
