@import '~theme/index.styl'

.lobby-chat
  display: grid
  grid-template-columns: minmax(260px, 320px) auto
  width: 100%

  .management
    grid-column: 1 / 1
    background: lightText

    .search-wrapper
      height: 60px
      background: #dddddd
      padding: .9rem
      box-sizing: border-box

      input 
        padding: .5rem
        box-sizing: border-box
        width: 100%
        font-size: .9rem
        border-radius: .25rem
        border: none
    
    .conversations-list
      padding: 0
      margin: 0
      list-style-type: none

      .conversation-item
        height: 60px
        padding: .9rem .4rem
        box-sizing: border-box
        border-bottom: 1px solid #cbcbcb
        cursor: pointer

        h4
          margin: 0
          margin-bottom: .2rem
          color: #9a9a9a

        em
          color: #cbcbcb

        &:hover, &.active
          background: #bebebe

          h4
            color: #777777
          
          em
            color: #999999

  .conversation
    grid-column: 2 / 2
    width: 100%
    height 100vh
    background: info
