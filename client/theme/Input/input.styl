  .lobby-input
    padding-top: 1rem
    box-sizing: border-box

    label
      display: block
      margin-bottom: 1rem

    input
      padding: .25rem .8rem
      box-sizing: border-box
      border-radius: .8rem
      border: 1px solid #dddddd
      outline: none
      font-family: inherit
      font-size: 1rem
      transition: .5s

      &:active, &:focus, &:hover
        border-color: #3793AE
        box-shadow: .3px .3px .3px .3px #3793AEAA
        transition: .5s
